<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <PropertyGroup>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <PublishProfilesDir>$(AppDesignerFolder)\PublishProfiles</PublishProfilesDir>
  </PropertyGroup>
  
  <ItemGroup>
    <PublishFiles Include="**\*.cshtml;**\*.config;**\*.json" />
    <ContentFiles Include="**\*.js;**\*.jsx;**\*.map;**\*.coffee;**\*.iced;**\*.htm;**\*.html;**\*.md;**\*.mdown;**\*.markdown;**\*.mdwn;**\*.css;**\*.less;**\*.scss;**\*.sass;**\*.png;**\*.jpg;**\*.svg;**\*.svgz" />
    <GlobalExclude Include="$(GlobalExclude);wwwroot\**;bin\**;obj\**" />
    <MiscFiles Include="**\.bowerrc;$(PublishProfilesDir)\**\*.pubxml;$(PublishProfilesDir)\**\*.ps1;$(PublishProfilesDir)\**\*.psm1" />
    <ContentExclude Include="bin\**;obj\**;node_modules\**;jspm_packages\**;bower_components\**" />
  </ItemGroup>
  
</Project>

