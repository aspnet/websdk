<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildExtensionsPath)\Microsoft\VisualStudio\v$(VisualStudioVersion)\TypeScript\Microsoft.TypeScript.targets"
          Condition="Exists('$(MSBuildExtensionsPath)\Microsoft\VisualStudio\v$(VisualStudioVersion)\TypeScript\Microsoft.TypeScript.targets') AND '$(EnableTypeScriptNuGetTarget)' != 'true'"/>

  <Import Project="$(MSBuildExtensionsPath)\Microsoft\VisualStudio\v$(VisualStudioVersion)\TypeScript\Microsoft.TypeScript.DotNetCore.targets"
          Condition="Exists('$(MSBuildExtensionsPath)\Microsoft\VisualStudio\v$(VisualStudioVersion)\TypeScript\Microsoft.TypeScript.DotNetCore.targets') AND '$(EnableTypeScriptNuGetTarget)' != 'true'"/>

  <PropertyGroup>
    <EnableDefaultContentItems Condition=" '$(EnableDefaultContentItems)' == '' ">true</EnableDefaultContentItems>
  </PropertyGroup>

  <PropertyGroup>
    <MSBuildWebPath>$(MSBuildExtensionsPath)\Microsoft\VisualStudio\Managed.Web\</MSBuildWebPath>
    <ActualLangName Condition="Exists('$(MSBuildWebPath)$(LangName)')">$(LangName)</ActualLangName>
    <ActualLangName Condition="'$(ActualLangName)' == ''">en-us</ActualLangName>
  </PropertyGroup>

  <!-- Web project capabilities that enables web features for .NET Core projects -->
  <ItemGroup>
    <ProjectCapability Include="DotNetCoreWeb" />
    <ProjectCapability Include="AspNetCore" />
    <ProjectCapability Include="Web" />
    <ProjectCapability Include="SupportHierarchyContextSvc" />
    <ProjectCapability Include="DynamicDependentFile" />    
  </ItemGroup>

  <!-- Web specific properties -->
  <ItemGroup>
    <PropertyPageSchema Include="$(MSBuildWebPath)$(ActualLangName)\GeneralBrowseObject.xaml"
                        Condition="Exists('$(MSBuildWebPath)$(ActualLangName)\GeneralBrowseObject.xaml')">
      <Context>BrowseObject</Context>
    </PropertyPageSchema>
  </ItemGroup>

  <!-- 
    Build level validation of web specific files, that can not be validated by schema or language services
  -->
  
  <PropertyGroup>
    <_WebProjectFramework Condition=" '$(MSBuildRuntimeType)' == 'Core'">netstandard1.0</_WebProjectFramework>
    <_WebProjectFramework Condition=" '$(_WebProjectFramework)' == ''">net46</_WebProjectFramework>
    <_WebProjectSystemTasksDir Condition=" '$(_WebProjectSystemTasksDir)'=='' ">$(MSBuildThisFileDirectory)..\..\tools\$(_WebProjectFramework)\</_WebProjectSystemTasksDir>
    <_WebTaskAssemblyFullPath Condition=" '$(_WebTaskAssemblyFullPath)'=='' ">$(_WebProjectSystemTasksDir)Microsoft.NET.Sdk.Web.ProjectSystem.Tasks.dll</_WebTaskAssemblyFullPath>
    <EnableWebConfigValidation Condition=" '$(EnableWebConfigValidation)'=='' ">true</EnableWebConfigValidation>
    <_ObsoleteWebConfigElements Condition=" '$(_ObsoleteWebConfigElements)'=='' ">appSettings;connectionStrings</_ObsoleteWebConfigElements>
</PropertyGroup>
  
  <!-- WebConfig validation, happens after build. -->
  <UsingTask TaskName="ValidateWebConfig" AssemblyFile="$(_WebTaskAssemblyFullPath)" />

  <Target Name="_ValidateWebConfig" AfterTargets="Build" Condition=" '$(EnableWebConfigValidation)'=='true' ">
    <ValidateWebConfig
      ProjectFullPath="$(MSBuildProjectFullPath)"
      ObsoleteWebConfigElements="$(_ObsoleteWebConfigElements)"/>
  </Target>
  
</Project>